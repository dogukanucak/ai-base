{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@ai-base/core/*": ["packages/core/src/*"],
      "@ai-base/server/*": ["packages/server/src/*"],
      "@ai-base/projects/*": ["packages/projects/src/*"],
      "@ai-base/client/*": ["packages/client/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
