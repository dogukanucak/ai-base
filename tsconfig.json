{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ai/*": ["./src/ai/*"],
      "@documents/*": ["./src/documents/*"],
      "@factory/*": ["./src/factory/*"],
      "@embeddings/*": ["./src/embeddings/*"],
      "@flow/*": ["./src/flow/*"],
      "@rag": ["./src/rag"],
      "@rag/*": ["./src/rag/*"],
      "@server/*": ["./src/server/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@config/*": ["./src/config/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 