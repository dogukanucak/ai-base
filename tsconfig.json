{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@core/ai/*": ["./src/core/ai/*"],
      "@core/documents/*": ["./src/core/documents/*"],
      "@core/factory/*": ["./src/core/factory/*"],
      "@core/embeddings/*": ["./src/core/embeddings/*"],
      "@core/flow/*": ["./src/core/flow/*"],
      "@core/rag": ["./src/core/rag"],
      "@core/rag/*": ["./src/core/rag/*"],
      "@core/types": ["./src/core/types"],
      "@core/types/*": ["./src/core/types/*"],
      "@core/config/*": ["./src/core/config/*"],
      "@core/tools/*": ["./src/core/tools/*"],
      "@projects/*": ["./src/projects/*"],
      "@server/*": ["./src/server/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist"]
}
